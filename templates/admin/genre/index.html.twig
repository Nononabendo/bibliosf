{% extends 'base.html.twig' %}

{% block title %}Genre{% endblock %}

{% block body %}
    <h1>Genre index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>Termes</th>
                <th>Nb de livres</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for genre in genres %}
            <tr>
                <td>{{ genre.id }}</td>
                <td>{{ genre.libelle }}</td>
                <td>{{ genre.termes }}</td>
                <td>{{ genre.livres|length }}</td>
                <td>
                    <a href="{{ path('app_admin_genre_show', {'id': genre.id}) }}">show</a>
                    <a href="{{ path('app_admin_genre_edit', {'id': genre.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_genre_new') }}">Create new</a>
{% endblock %}
