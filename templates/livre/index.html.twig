{% extends 'base.html.twig' %}

{% block title %}Liste des livres{% endblock %}

{% block body %}
    <table class="table table-bordered">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Titre</th>
                <th>Résumé</th>
                <th>Couverture</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
            {% for livre in livres %}
                <tr>
                    <td>{{ livre.id }}</td>
                    <td>{{ livre.titre }}</td>
                    <td>{{ livre.resume }}</td>
                    <td>{{ livre.couverture }}</td>
                    <td>
                        <a href="{{ path('app_livre_modifier', {id: livre.id}) }}"><i class="bi-pencil"></i></a>
                        <a href="{{ path('app_livre_supprimer', {id: livre.id}) }}">
                            <i class="bi-trash3"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    
    </table>
{% endblock %}
